<style>
    .button {
        background-color: rgb(39, 190, 1); /* Green */
        border: none;
        color: white;
        padding: 16px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        -webkit-transition-duration: 0.4s; /* Safari */
        transition-duration: 0.4s;
        cursor: pointer;
    }

    .button1 {
        background-color: white; 
        color: black; 
        border: 2px solid rgb(39, 190, 1);
    }

    .button1:hover {
        background-color: #4CAF50;
        color: white;
    }

    input[type=text] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
        border: none;
        border-bottom: 2px solid red;
    }
</style>

<section>
    <form action="/list" method="POST">
        <input type="text" name="title" placeholder="insert name of playlist">
